<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Fortune Teller</title>
  </head>

  <body>
    <h1>All the fortunes!</h1>

    <ul class="fortunes">
      <% fortunes.each do |fortune| %>
        <li id="fortune_<%= fortune.id %>">
          id: <%= fortune.id %>
          content: <%= fortune.content %>
        </li>
      <% end %>
    </ul>

    <form action="/fortunes" method="post" id="fortune-form">
      <fieldset>
        <legend>Add a Fortune</legend>
        <input id="fortune-content" name="content" type="text"></input>
        <input type="submit"></input>
      </fieldset>
    </form>

    <form action="/fortunes/edit" method="post" id="fortune-form-update">
      <fieldset>
        <legend>Update a Fortune</legend>
        <input type="hidden" name="_method" value="PUT"></input>
        <label for="fortune-update-id">Id</label>
        <input id="fortune-update-id" name="id" type="text"></input>
        <label for="fortune-update-content">Content</label>
        <input id="fortune-update-content" name="content" type="text"></input>
        <input type="submit" value="Update"></input>
      </fieldset>
    </form>

    <form action="/fortunes/delete" method="post" id="fortune-form-delete">
      <fieldset>
        <legend>Delete a Fortune</legend>
        <input type="hidden" name="_method" value="DELETE"></input>
        <label for="fortune-delete-id">Id</label>
        <input id="fortune-delete-id" name="id" type="text"></input>
        <input type="submit" value="Delete"></input>
      </fieldset>
    </form>


    <script src="//code.jquery.com/jquery-2.1.3.min.js"></script>
    <script src="/js/fortune.js"></script>
  </body>
</html>
